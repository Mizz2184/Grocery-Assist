# Stripe API Keys - Server-side (LIVE mode for production)
STRIPE_SECRET_KEY=sk_live_your_secret_key_here

# Stripe API Keys - Client-side (Vite prefixes with VITE_)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here

# Stripe Payment Links
# Monthly Subscription - $4.99/month
VITE_STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
VITE_STRIPE_MONTHLY_PAYMENT_LINK=https://buy.stripe.com/your_monthly_payment_link

# Lifetime Deal - $69.99 one-time
VITE_STRIPE_LIFETIME_PRICE_ID=price_your_lifetime_price_id_here
VITE_STRIPE_LIFETIME_PAYMENT_LINK=https://buy.stripe.com/your_lifetime_payment_link

# RapidAPI for Currency Conversion
VITE_RAPIDAPI_KEY=your_rapidapi_key_here

# Admin Authentication
VITE_ADMIN_PASSWORD=your_admin_password_here

# Other configuration
PORT=8080
NODE_ENV=development 